<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liwujingling.MainActivity">
    <FrameLayout
        android:id="@+id/main_framlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPink"
        >
    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/home_bottom_rg"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/homepage_gift_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/radio_btn_selector"
            android:drawableTop="@drawable/homepage_gift_selector"
            android:button="@null"
            android:layout_gravity="center"
            />
        <RadioButton
            android:id="@+id/homepage_game_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/homepage_game_selector"
            android:gravity="center"
            android:button="@null"
            android:checked="false" />
        <RadioButton
            android:id="@+id/homepage_play_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/homepage_play_selector"
            android:gravity="center"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/homepage_mine_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@drawable/homepage_mine_selector"
            android:button="@null"
            />
    </RadioGroup>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPink"
        android:layout_above="@id/home_bottom_rg"
        />
    <FrameLayout
        android:id="@+id/home_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_framlayout"
        android:layout_above="@+id/home_bottom_rg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
